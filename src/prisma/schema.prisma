model Post {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  title     String
  subtitle  String?
  category  String
  segments  PostSegment[]
}

model PostSegment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  subtitle  String?
  // for Post.segments
  Post      Post     @relation(fields: [postId], references: [id])
  postId    String
  //
}
