{
  "name": "condu",
  "author": "@bennettdams",
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "dev": "next dev -p 3000",
    "d": "yarn dev",
    "build": "next build",
    "start": "next start -p 3001",
    "prod": "yarn build && yarn start",
    "type-check": "tsc --pretty --noEmit",
    "ts": "yarn type-check",
    "p:dev": "npx prisma migrate dev --schema ./src/prisma/schema.prisma",
    "pd": "yarn p:dev",
    "p:create": "npx prisma migrate dev --create-only --schema ./src/prisma/schema.prisma",
    "p:studio": "npx prisma studio --schema ./src/prisma/schema.prisma",
    "ps": "yarn p:studio",
    "p:reset": "npx prisma migrate reset --schema ./src/prisma/schema.prisma",
    "pr": "yarn p:reset",
    "p:generate": "npx prisma generate --schema ./src/prisma/schema.prisma",
    "p:format": "npx prisma format --schema ./src/prisma/schema.prisma",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.2.0",
    "@heroicons/react": "^1.0.1",
    "@prisma/client": "^2.24.1",
    "@tailwindcss/forms": "^0.3.3",
    "babel-plugin-superjson-next": "^0.3.0",
    "next": "^10.2.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-query": "^3.13.10",
    "superjson": "^1.7.4"
  },
  "//dependencies": [
    "superjson and babel-plugin-superjson-next for serializing dates with Prisma & Next.js. In .babelrc: plugins: [ 'superjson-next' ] "
  ],
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/react": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.0.10",
    "postcss": "^8.2.10",
    "prettier": "^2.0.2",
    "prisma": "^2.24.1",
    "tailwindcss": "^2.1.4",
    "typescript": "^4.1.3"
  },
  "//devDependencies": [
    "autoprefixer & postcss for Tailwind"
  ]
}
